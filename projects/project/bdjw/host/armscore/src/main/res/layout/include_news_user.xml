<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.zzz.myemergencyclientnew.widget.custom.CircleImageView
        android:id="@+id/img_head_portrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:src="@mipmap/default_head_photo"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/txt_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_small" />

    <com.allen.library.SuperButton
        android:id="@+id/stv_news_type"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="3dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_smaller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stv_real_name"
        app:sCornersBottomLeftRadius="10dp"
        app:sCornersTopLeftRadius="10dp"
        app:sSolidColor="@color/grayc"
        app:sStrokeColor="@color/red" />

