<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wwq="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="mView"
            type="com.zzz.myemergencyclientnew.fragment.login.ForgetPasswordFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.zzz.myemergencyclientnew.widget.combine.ExtendEditView
                    android:id="@+id/edt_login_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/main_m_l_r"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/main_m_l_r"
                    wwq:edt_hint="请输入手机号"
                    wwq:edt_inputType="phone"
                    wwq:edt_maxLength="11"
                    wwq:img_extend_left_normal="@mipmap/ic_login_phone_normal"
                    wwq:img_extend_left_pressed="@mipmap/ic_login_phone_pressed"
                    wwq:img_extend_right_normal="@mipmap/ic_login_correct_normal"
                    wwq:img_extend_right_pressed="@mipmap/ic_login_correct_pressed" />

                <com.zzz.myemergencyclientnew.widget.combine.ExtendEditView
                    android:id="@+id/edt_login_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/main_m_l_r"
                    android:layout_marginTop="@dimen/login_m_t"
                    android:layout_marginRight="@dimen/main_m_l_r"
                    wwq:btn_enabled="false"
                    wwq:btn_text="发送验证码"
                    wwq:btn_visibility="true"
                    wwq:edt_hint="请输入验证码"
                    wwq:edt_inputType="code"
                    wwq:edt_maxLength="6"
                    wwq:img_extend_left_normal="@mipmap/ic_login_key_normal"
                    wwq:img_extend_left_pressed="@mipmap/ic_login_key_pressed"
                    wwq:img_extend_right_normal="@mipmap/ic_login_correct_normal"
                    wwq:img_extend_right_pressed="@mipmap/ic_login_correct_pressed" />

                <com.zzz.myemergencyclientnew.widget.combine.ExtendEditView
                    android:id="@+id/edt_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/main_m_l_r"
                    android:layout_marginTop="@dimen/login_m_t"
                    android:layout_marginRight="@dimen/main_m_l_r"
                    wwq:edt_hint="请输入新密码"
                    wwq:edt_inputType="password"
                    wwq:edt_maxLength="20"
                    wwq:img_extend_left_normal="@mipmap/ic_login_chain_normal"
                    wwq:img_extend_left_pressed="@mipmap/ic_login_chain_pressed"
                    wwq:img_extend_right_normal="@mipmap/ic_login_eye_normal"
                    wwq:img_extend_right_pressed="@mipmap/ic_login_eye_pressed" />

                <com.zzz.myemergencyclientnew.widget.combine.ExtendEditView
                    android:id="@+id/edt_login_pass_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/main_m_l_r"
                    android:layout_marginTop="@dimen/login_m_t"
                    android:layout_marginRight="@dimen/main_m_l_r"
                    wwq:edt_hint="请确认新密码"
                    wwq:edt_inputType="password"
                    wwq:edt_maxLength="20"
                    wwq:img_extend_left_normal="@mipmap/ic_login_confirm_normal"
                    wwq:img_extend_left_pressed="@mipmap/ic_login_confirm_pressed"
                    wwq:img_extend_right_normal="@mipmap/ic_login_eye_normal"
                    wwq:img_extend_right_pressed="@mipmap/ic_login_eye_pressed" />

                <Button
                    android:id="@+id/btn_confirm"
                    style="@style/BtnMain"
                    android:layout_marginLeft="@dimen/main_m_l_r"
                    android:layout_marginTop="@dimen/login_m_t"
                    android:layout_marginRight="@dimen/main_m_l_r"
                    android:onClick="@{mView::confirm}"
                    android:enabled="false"
                    android:text="确认" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>
