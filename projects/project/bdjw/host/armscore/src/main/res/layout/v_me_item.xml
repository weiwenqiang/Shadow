<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.allen.library.SuperTextView
        android:id="@+id/stv_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:sCenterTextColor="@color/text_black"
        app:sCenterTextSize="@dimen/text_normal"
        app:sCenterTextString=""
        app:sCenterViewGravity="left_center"
        app:sDividerLineType="none"
        app:sLeftTvDrawableHeight="40dp"
        app:sLeftTvDrawableRight="@drawable/ic_placeholder"
        app:sLeftTvDrawableWidth="40dp"
        app:sRightIconRes="@mipmap/img_gray_right" />

</FrameLayout>