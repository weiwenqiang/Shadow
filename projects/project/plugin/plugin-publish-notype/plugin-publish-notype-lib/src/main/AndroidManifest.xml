<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zzz.myemergencyclientnew">

    <!--    允许程序访问网络连接，可能产生GPRS流量-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--    允许程序获取网络信息状态，如当前的网络连接是否有效-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application android:networkSecurityConfig="@xml/network_security_config">
        <activity
            android:name="com.zzz.myemergencyclientnew.PublishNoTypeArticleActivity"
            android:theme="@style/ThemeMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.zzz.myemergencyclientnew.MyReceiver">
            <intent-filter>
                <action android:name="com.action" />
            </intent-filter>
        </receiver>
    </application>

</manifest>