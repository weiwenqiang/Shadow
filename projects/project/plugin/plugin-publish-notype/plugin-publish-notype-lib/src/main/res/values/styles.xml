<resources>

    <!--主风格开始-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/main_color</item>

        <item name="android:windowNoTitle">true</item> <!-- 设置无标题 -->
        <!--<view_item name="android:windowFullscreen">?android:windowNoTitle</view_item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/main_color</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/main_color</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 弹出设置框文字颜色 -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- toolbar 图标颜色 ! 注意:影响多选框颜色 -->
        <item name="android:textColorSecondary">@color/main_color</item>
    </style>

    <style name="ChartHeaderWhite">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_smaller</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>
</resources>
