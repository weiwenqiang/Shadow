<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:are="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mView"
            type="com.zzz.myemergencyclientnew.HelpFeedbackActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color"
            android:elevation="6dp"
            android:theme="@style/Base.Theme.AppCompat.Light"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@mipmap/ic_action_back"
            app:titleTextColor="@color/white" />

        <EditText
            android:id="@+id/edt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_edt_grey"
            android:gravity="left"
            android:hint="请填写10字以上，200字一下的描述，以便我们为您提供更好的帮助"
            android:lines="7"
            android:padding="10dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="联系方式(选填，以便我们与您联系)"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small"
            app:layout_constraintTop_toBottomOf="@+id/edt_text" />


        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_edt_grey"
            android:hint="联系方式"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small"
            app:layout_constraintTop_toBottomOf="@+id/txt_phone" />

        <TextView
            android:id="@+id/txt_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="图片(选填，提供问题截图等)"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small"
            app:layout_constraintTop_toBottomOf="@+id/edt_phone" />

        <!--        app:layout_constraintHorizontal_bias="3"-->
        <!--        app:layout_constraintDimensionRatio="h:3:3"-->
        <ImageView
            android:id="@+id/img_add_default"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/img_add_default"
            android:onClick="@{mView::addImg}"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/view_align"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_img" />

        <View
            android:id="@+id/view_align"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_add_default"
            app:layout_constraintTop_toBottomOf="@+id/txt_img" />

        <Button
            android:id="@+id/btn_affirm"
            style="@style/BtnMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="@{mView::affirm}"
            android:text="提交"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>